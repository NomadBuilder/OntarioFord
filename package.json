{
  "name": "the-ledger",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "rm -rf .next && next dev",
    "dev:reset": "pkill -f 'next dev' || true && rm -rf .next && npm run build:validate && next dev",
    "dev:safe": "bash scripts/dev-safe.sh",
    "build": "next build",
    "build:validate": "next build && node scripts/validate-build.js",
    "build:static": "STATIC_EXPORT=true next build",
    "start": "next start",
    "lint": "next lint",
    "process-data": "python scripts/process_data.py"
  },
  "dependencies": {
    "@react-spring/web": "^10.0.3",
    "autoprefixer": "^10.4.23",
    "d3": "^7.8.5",
    "framer-motion": "^10.16.4",
    "next": "^14.0.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-spring": "^10.0.3",
    "tailwindcss": "^3.3.6",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.3.7",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "typescript": "^5.3.0"
  }
}
